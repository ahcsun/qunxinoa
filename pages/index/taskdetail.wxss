/* pages/index/taskdetail.wxss */
page{
  overflow: hidden;
}
.td-end {
  padding: 20rpx 0;
  text-align: center;
  background: #5fc0af;
}

/* 发起人员 */

.create-text {
  width: 90%;
  padding: 0 20rpx;
  margin: 40rpx auto;
  border-radius: 20rpx;
  border: solid 2rpx #394550;
}

.create-text textarea {
  width: 100%;
  height: 160rpx;
  color: white;
  margin-bottom: 20rpx;
}

.create-text image {
  width: 120rpx;
  height: 120rpx;
}

.create-text>view:nth-of-type(2) {
  padding: 20rpx 0;
}

.create-bg {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #586d7b;
}

.create-model image {
  width: 120rpx;
  border-radius: 20rpx;
  margin-right: 40rpx;
}

.create-model view {
  line-height: 60rpx;
}

/* 成员员信息 */

.td-info {
  width: 90%;
  margin: 40rpx auto;
  border-radius: 20rpx;
  padding: 0 20rpx;
  border: solid 2rpx #394550;
}

.td-info>view:first-of-type {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #394550;
}

.td-info>view:last-of-type {
  padding: 30rpx 0;
}

.td-info>view:last-of-type text:nth-child(odd) {
  color: #75909f;
  margin-right: 10rpx;
}

/* 任务动态 */

.td-dynamic {
  width: 90%;
  margin: 40rpx auto;
  border-radius: 20rpx;
  padding: 0 20rpx;
  border: solid 2rpx #394550;
}

.td-dynamic>view:first-of-type {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #394550;
}

.td-dynamic scroll-view {
  padding: 30rpx 0;
  line-height: 50rpx;
  height:516rpx;
}

.td-dynamic scroll-view view {
  justify-content: space-between;
}

/* 编辑完成 */

.td-footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.td-footer button {
  height: 95rpx;
  color: #1f2831;
  flex: 1;
  font-size: 30rpx;
  line-height: 95rpx;
  border-radius: 0;
}

.td-footer button:nth-of-type(1) {
  background: #5fc0af;
  border-right: none;
  color: white;
}

.td-footer button:nth-of-type(2) {
  background: #586d7b;
  color: white;
}

.td-footer button::after {
  border: none;
}

.td-footer button::before {
  border: none;
}
