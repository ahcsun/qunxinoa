/* pages/index/index.wxss */
@import "/pages/footer/footer.wxss";
@import "../../wxParse/wxParse.wxss";
/*左部推荐列表*/
.list-left{
  width: 182rpx;
  height: auto;
  border-radius:25rpx;
  background: #303d47;
  margin-top: 50rpx;
  float: left;
}
.list-text{
  width: 142rpx;
  height: 56rpx;
  border: 2rpx solid #869ba7;
  color: white;
  border-radius: 15rpx;
  margin: 40rpx auto;
}
.list-text.active{
   background: linear-gradient(#55afac, #5ebeae);
}

/*右部推荐分类*/
.classification{
  margin-top: 50rpx;
  width: 514rpx;
  float: right;
  margin-right: 20rpx;
}
/* 信息中心 */
/* 搜索框 */
.list-search{
  width: 90%;
  height: 58rpx;
  margin: 0 auto 20rpx auto;
  position: relative;
}
.list-search>image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:16rpx;
  left: 150rpx;
  z-index: 99;
}
.list-search>input{
  height: 100%;
  color: #333;
  margin: 0 auto;
  padding: 0 5% 0 46%;
  border-radius: 10rpx;
  font-size: 24rpx;
  background: white;
}
/* 公告 */
.list-anno{
  padding: 28rpx 0 0 0;
  background:#303d47;
  border-radius: 25rpx 25rpx 0 0;
}
.list-anno view:nth-of-type(2) text{
  height: 56rpx;
  flex: 1;
  text-align: center;
  color: white;
}
.list-anno view:nth-of-type(2) text:active{
  color: #5ab7ae;
}
/* 消息列表 */
.list-message{
  padding: 30rpx 28rpx;
  line-height: 45rpx;
  /* border-bottom: 1rpx solid  #869ba7; */
}
.list-message view[class="fon28r_grak"] image{
  display: none;
}
.list-message view[class="wxParse-p"],.list-message view[class="wxParse-ul"],.list-message view[class="wxParse-li-circle"]{
  display: none
}
/* .list-message view[class="fon28r_grak"]{
  overflow:hidden;
  height:38rpx;
} */
/* .list-message:last-of-type{
  margin-bottom: 50rpx;
} */
.list-message view:nth-of-type(3){
  justify-content: space-between
}
.list-message view:nth-of-type(3) text{
  font-size: 26rpx;
  color: white;
}

/* 任务指派 */
.tast-end{
  padding: 30rpx 28rpx;
  color: white;
  background: #5ab7ae;
  justify-content: space-between
}
.tast-end view:last-of-type text,.tast-end view:first-of-type text{
  color: white;
}
.task-status{
  height:79%;
}
.task-status>view{
  padding: 10rpx 28rpx;
}
.task-list{
  height:93%;
  overflow: hidden;
  color: #516a77;
  padding: 0 28rpx 40rpx 28rpx;
  background: #5ab7ae;
  border-radius:0 0 25rpx 25rpx;
}
.task-list view[class='flex']{
  line-height: 50rpx;
  margin-top: 30rpx;
}
.task-list view[class='flex']>view{
  flex: 2;
}
.task-list view image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 28rpx;
}
.task-tree{
  padding-top: 20rpx;
  margin-bottom:20rpx;
}
.task-tree>text{
  color: #333;
}
.task-tree view[class='flex'] view text{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/*底部bar*/
.scoll-s{
  height: 100%;
  background:#303d47; 
  border-radius: 25rpx;
}
.down-bar{
  width: 100%;
  height: 26rpx;
  background: #f8f8f8;
  position: fixed;
  bottom: 0;
}
.scoll-h{
  height: 87%;
  background:#5ab7ae; 
  border-radius:0 0 25rpx 25rpx;
}
/*遮罩层样式代码*/
.zhezhao{
  width:100%; 
  height:100%; 
  position:fixed; 
  top:0; 
  background: #000; 
  z-index: 5; 
  opacity: 0.5; 
  overflow: hidden;
  }
.show_boxT{
  position: fixed;
  bottom: 0;
  margin: auto;
  width: 100%;
  background: #1f2831;
  z-index: 100;
}
.show_boxT .list-title{
  padding: 10rpx 28rpx;
  background:#5fc0af;
  border-bottom: none;
  color: white;
}
.show_boxT>view{
  padding: 20rpx 28rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #394550;
}
.show_boxT>view image{
  width: 30rpx;
  height: 25rpx;
}
.show_boxT>view:last-of-type,.show_boxT>view:nth-of-type(4){
  border-bottom: none;
}
.show_boxT>view text{
  font-size: 30rpx;
  color: white;
}
