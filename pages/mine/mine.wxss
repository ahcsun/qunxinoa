/* pages/mine/mine.wxss */
@import "/pages/footer/footer.wxss";
/* 头部图片 */
.headimg{
  width: 100%;
  height: 510rpx;
  margin: 0 auto;
  text-align: center;
  position: relative;
}
.headimg>image{
  width: 100%;
}
/* 中部 个人信息 收藏夹  等四个入口 */
.Info{
  position: absolute;
  top: 0;
  width: 100%;
  text-align: center;
  margin-top: 80rpx;
}
.Info>image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%; 
}
.Info>text{
  display: block;
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 34rpx;
	color: #88d5c1;
  margin-top: 30rpx;
}
.box:nth-child(odd){
  width: 100%;
  line-height: 108rpx;
  padding: 0 5%;
  background:#38a796;
  justify-content:space-between;
}
.box:nth-child(even){
  width: 100%;
  line-height: 108rpx;
  padding: 0 5%;
  background:#5fc0af;
  justify-content:space-between;
}
.box>text:nth-of-type(1){
  font-size: 28rpx;
  color: white;
}
.box>image{
  width: 19rpx;
  height: 35rpx;
  float: right;
  margin-top: 37rpx;
}
